[module/rofi-menu]
type = custom/text
content = 

content-padding = 0

click-left = ~/.config/rofi/menu/launcher.sh
click-right = ~/.config/rofi/menu/window.sh


[module/bspwm]
type = internal/bspwm

enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = 

format = <label-state> <label-mode>

label-focused = %icon%
label-focused-padding = 1.5
label-focused-foreground = ${xrdb:color6}

label-occupied = %icon%
label-occupied-padding = 1.5

label-urgent = %icon%
label-urgent-padding = 1.5
label-urgent-foreground = ${xrdb:color1}

label-empty = %icon%
label-empty-padding = 1.5

[module/xwindow]
type = internal/xwindow
