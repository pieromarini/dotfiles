[module/bspwm]
type = internal/bspwm
enable-click = true
enable-scroll = true
reverse-scroll = true
pin-workspaces = true
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
format = <label-state> <label-mode>

label-focused = %icon%
label-focused-padding = 1.5
label-focused-foreground = ${colors.bspwm-focused-fg}

label-occupied = %icon%
label-occupied-padding = 1.5

label-urgent = %icon%
label-urgent-padding = 1.5
label-urgent-foreground = ${colors.alert}

label-empty = %icon%
label-empty-padding = 1.5

[module/bluetooth]
type = custom/text
content = ""
format = <label>
content-foreground = ${colors.bluetooth-fg}
click-left = bspc rule -a '*' -o state=floating rectangle=400x120+750+400 && alacritty -e polybarblue.sh
click-middle = blueman-manager

[module/date]
type = internal/date
interval = 1
date = %e %B
time = %H:%M
label = %date% %time%
label-foreground = ${colors.date-fg}

[module/pulseaudio-control]
type = custom/script
tail = true
label=%output%
exec = ~/.bin/pulseaudio-control listen
click-right = exec pavucontrol &
click-left = ~/.bin/pulseaudio-control togmute
click-middle = ~/.bin/pulseaudio-control next-sink
scroll-up = ~/.bin/pulseaudio-control up
scroll-down = ~/.bin/pulseaudio-control down
label-padding = 0
label-foreground = ${colors.foreground}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
poll-interval = 5
full-at = 99
label-charging = %percentage%%
format-charging = <animation-charging>  <label-charging>
animation-charging-foreground = ${colors.battery-charging-prefix-fg}
label-discharging = %percentage%%
format-discharging = <ramp-capacity> <label-discharging>
format-full = <label-full>
label-full =  
label-full-foreground = ${colors.battery-full-prefix-fg}
ramp-capacity-0 =  
ramp-capacity-1 =  
ramp-capacity-2 =  
ramp-capacity-3 =  
ramp-capacity-4 =  
animation-charging-0 =  
animation-charging-1 =  
animation-charging-2 =  
animation-charging-3 =  
animation-charging-4 =  
animation-charging-framerate = 750

[module/memory]
type = internal/memory
interval = 5
label = %percentage_used%%
