### TERMINAL

# St
super + Return
	alacritty

### Menus

# Rofi
super + space
	~/.config/rofi/menu/launcher.sh

super + p
	~/.config/rofi/menu/search.sh

super + alt + Escape
	~/.config/rofi/menu/system.sh

super + alt + Delete
	~/.config/rofi/menu/config.sh

super + {Tab}
	~/.config/rofi/menu/window.sh

super + {grave}
	~/.config/rofi/menu/horarios.sh


### Notifications (dunst)

super + x
	dunstctl close

super + ctrl + x
	dunstctl close_all

ctrl + {grave}
	dunstctl history

super + ctrl + .
	dunstctl context

### APPS

# Chromium
super + c
	brave


### Multimedia

# Playback
XF86AudioPlay
	media-controller PlayPause

XF86AudioNext
	media-controller Next

XF86AudioPrev
	media-controller Previous

# Volume
XF86Audio{RaiseVolume,LowerVolume,Mute}
	amixer -q {set Master 5%+ unmute,set Master 5%- unmute,set Master toggle}


### MISCELLANEOUS

# Brightness
XF86MonBrightness{Up,Down}
	light {-A 10,-U 10}

# Screenshots
Print
	flameshot gui

shift + Print
	flameshot full -c


### BSPWM

# quit/restart bspwm
super + shift + {Escape,r}
	bspc {quit,wm -r}

# close and kill
super + q
	bspc node -c


## State/Flags

# set the window state
super + {t,shift + t,shift + space,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}


## Focus/Swap

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the previous/next desktop in the current monitor
alt + {h,l}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + {Tab,bar}
	bspc {desktop,node} -f last

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# swap active desktops
super + m
	bspc desktop --swap next.active --follow

# move current window to pre-selected space
super + shift + m
    bspc node -n last.!automatic

# Rotate tree
super + shift + {d,a}
    bspc node @/ -C {forward,backward}

# switch to next monitor
super + comma
	bspc monitor -f next


## Preselect

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


## Move/Resize

super + s : {h,j,k,l}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)


# Clipboard
super + v
    CM_LAUNCHER=rofi clipmenu \
		-p "Clipboard: " \
        -no-show-icons \
        -theme '.config/rofi/launcher.rasi'
